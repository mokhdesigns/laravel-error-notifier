{
    "name": "syntech/laravel-error-notifier",
    "description": "A Laravel package to send email notifications on errors",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Syntech",
            "email": "info@syntecheg.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "illuminate/support": "^8.0|^9.0|^10.0"
    },
    "autoload": {
        "psr-4": {
            "SyntechNotifier\\LaravelErrorNotifier\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "SyntechNotifier\\LaravelErrorNotifier\\LaravelErrorNotifierServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
